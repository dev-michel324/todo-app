{{#if messages}}
<ul class="mt-3" id="msgs">
    {{#each messages}}
        <li>
            <div class="alert alert-{{#equals type 'success'}}success{{else}}danger{{/equals}} alert-dismissible fade show" role="alert">
            {{message}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </li>
    {{/each}}
</ul>
{{/if}}