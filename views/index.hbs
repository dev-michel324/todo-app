{{>msg}}

<div id="add-btn">
    <a href="/todo/addtodo"><input type="submit" class="btn btn-outline-success mt-3" value="Adicionar"></a>
</div>

<ul class="nav nav-pills mb-3 tabs-open-closed justify-content-center" id="pills-tab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button"
      role="tab" aria-controls="pills-home" aria-selected="true">Abertos</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button"
      role="tab" aria-controls="pills-profile" aria-selected="false">Fechados</button>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">
    {{#if todoData}}
    <div class="row mt-3 justify-content-center">
      {{#each todoData}}
      {{#if open}}
      <div class="col-sm-4 mt-3">
        <div class="card">
          <div class="card-body text-center text-dark">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{description}}</p>
            <div class="forms justify-content-center">
              <form class="me-1" action="/todo/update" method="post">
                <input type="text" name="id" value="{{id}}" hidden>
                <input type="submit" class="btn btn-primary" value="Editar">
              </form>
              <form class="ms-1" action="/todo/close" method="post">
                <input type="text" name="id" value="{{id}}" hidden>
                <input type="submit" class="btn btn-secondary" value="Fechar">
              </form>
            </div>
          </div>
        </div>
      </div>
      {{/if}}
      {{/each}}
    </div>
    {{/if}}
  </div>
  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">
    {{#if todoData}}
    <div class="row mt-3 justify-content-center">
      {{#each todoData}}
      {{#unless open}}
      <div class="col-sm-4 mt-3">
        <div class="card">
          <div class="card-body text-center text-dark">
            <h5 class="card-title">{{limitChar title 13}}</h5>
            <p class="card-text">{{limitChar description 13}}</p>
            <div class="forms justify-content-center">
              <form class="me-1" action="/todo/update" method="post">
                <input type="text" name="id" value="{{id}}" hidden>
                <input type="submit" class="btn btn-primary" value="Editar">
              </form>
              <form class="ms-1" action="/todo/delete" method="post">
                <input type="text" name="id" value="{{id}}" hidden>
                <input type="submit" class="btn btn-danger" value="Apagar">
              </form>
            </div>
          </div>
        </div>
      </div>
      {{/unless}}
      {{/each}}
    </div>
    {{/if}}
  </div>
</div>